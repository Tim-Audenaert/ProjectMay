<Window x:Class="ProjectMay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectMay"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Label x:Name="lblUsername" Content="Username" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="30"></Label>
        <Label x:Name="lblPassword" Grid.Row="1" Content="Password" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="30"></Label>
        <TextBox x:Name="TxtUsername" Grid.Column="1" Width="400" Height="30"></TextBox>
        <TextBox x:Name="TxtPassword" Grid.Column="1" Grid.Row="1" Width="400" Height="30"></TextBox>
        <Button Grid.ColumnSpan="2" Grid.Row="2" FontSize="30" Content="Log In" BorderThickness="10" Margin="10 10 10 10" Click="Button_Click"></Button>
    </Grid>
</Window>
