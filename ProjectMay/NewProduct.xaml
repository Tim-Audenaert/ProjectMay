<Window x:Class="ProjectMay.NewProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectMay"
        mc:Ignorable="d"
        Title="NewProduct" Height="450" Width="800">
    <Grid Margin="50">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="LblName" Content="Name" HorizontalAlignment="Right"></Label>
        <TextBox x:Name="TxtName" Grid.Column="1" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
        <Label x:Name="LblPrice" Content="Price" Grid.Row="1" HorizontalAlignment="Right"></Label>
        <TextBox x:Name="TxtPrice" Grid.Row="1" Grid.Column="1" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
        <Label x:Name="LblSupplier" Content="Supplier" HorizontalAlignment="Right" Grid.Row="2"></Label>
        <ComboBox x:Name="CmbSupplier" Grid.Row="2" Grid.Column="1" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top"></ComboBox>
        <Button x:Name="BtnAddProduct" Content="Add Product" Grid.Row="5" Grid.ColumnSpan="2" Click="AddProduct"></Button>
    </Grid>
</Window>
