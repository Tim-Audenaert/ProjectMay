<Window x:Class="ProjectMay.AddOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectMay"
        mc:Ignorable="d"
        Title="AddOrder" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <RadioButton Content="Purchase" HorizontalAlignment="Right" GroupName="Order" IsChecked="True"/>
        <RadioButton Content="Sale" Grid.Column="1" HorizontalAlignment="Left" GroupName="Order"/>
        <Frame x:Name="OrderPage" Grid.ColumnSpan="2"></Frame>
    </Grid>
</Window>
